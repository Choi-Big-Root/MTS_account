<action id="N_EnterBackGround" scope="common" 
value="
	$log(************** N_EnterBackGround [$p_not_background_check][$g_is_vaccine_ing][$g_file_name][$g_menuCode][$g_is_background] ===============);
	
	if($g_menuCode==2131
	|| $g_menuCode==2132
	|| $g_menuCode==5131
	|| $g_menuCode==5132
	|| $g_menuCode==7131
	|| $g_menuCode==7132
	|| $g_menuCode==8132
	|| $g_menuCode==8133
	){
		if($g_is_background_check){ 
			$log(***************** 차트셋팅:N_EnterBackGround);
			return;	
		}				// 차트 화면등에서 쓰임 	

		// 20230110 앱 실행시 백그라운드 체크함
		//if($g_isAndroid){
		//	$log(***************** 차트셋팅:N_EnterBackGround 리턴 );
		//	return;	
		//}	
	}
	
	if($p_not_background_check){		return;		} 		// 안드로이드는 위에 다른 화면이 있을경우 백그라운드 호출한다.
	if($isequal_string($g_menuCode, 1920)){ 	$log(***********  로그인 화면 리턴); return;		} 	// 로그인 화면일 경우

	if($g_menu_open_npki_flag){ 	$log(***********  로그인 후 공인인증서 화면); return;		} 

	if($isequal_string($g_file_name, intro_after)){ 	$log(***********  intro_after 화면 리턴); return;		} 	// 로그인 화면일 경우

	$setvar_common(g_n_becomeActive_process = false);
	$stopnstimer(TIMER_DISCONNECT_ALL);  

	$setvar_common(
        g_background_at_day  	= $now(yyyyMMdd)
        ,g_background_at_hour 	= $now(HH)
        ,g_background_at_min  	= $now(mm)
    );
    $logvar(
        g_background_at_day  	
        ,g_background_at_hour 	
        ,g_background_at_min  	
    );

	$setvar(vg_4100_background.hidden = false );
	$web_background(trading_webview);
	$setvar_common(g_is_master_relading = false );		// 백그라운드 넘어갈경우 무조건 마스터 받지 않게 하기위해 추가함 - 2020/08/05


	$callaction(fnClosePopScreen); // 2020/02/12 추가

	if($g_is_open_3gAlarm){
		$log(****************** 3G 팝업을 닫는다);
		$closescreen(pop_3GAlarm); 
	}
	//$ssl_close($g_SSLSocketName);  					// Android11 버전에서 소켓을 끊고 나면 반응을 하지 않는다.
	if($g_is_exit){		$exit();	return;		}
	if($g_menuCode == 1920 ){		return;		}		//로그인화면
	if($g_is_fingerprint_background){ 			$setvar_common(g_is_fingerprint_background = );		return;		} // 지문인식 백그라운드일 리턴 
	$setvar_common(g_is_background = true);


	
	if($g_screen_all_menu_state_flag){
		// 메뉴가 열려있는 상태로 백그라운드 왔다면. 포그라운드 전환 후 메뉴 닫을때 N_fnBecomeActive_GoScreen 호출
		$setvar_common(g_is_background_all_menu= true);
	}else{
		// 메뉴가 닫혀있는 상태로 백그라운드 왔다면. 아무런 추가내용 없음.
		$setvar_common(g_is_background_all_menu= false);
	}


	$log(*********** BACKGROUND [$g_is_background]);

	$callaction(N_fnConfig_Save_Background);

	$log(*** 공동인증비번:g_login_cert[$g_login_cert]	);
	$log(민료시간 공동인증:$g_login_expiry);
	
	if(!$g_is_open_account){
		$closescreen_all();
	}

	// 서버연결 끊기.
	if ($g_isAndroid){
		// 실시간은 다 취소하고, 올라올때 다시 셋팅한다.
		//$callaction(screen_contents_onunload);
		$callaction(fnRealData_All_Stop);
		//$setnstimer(TIMER_DISCONNECT_ALL,0.1,N_fnDisconnect_All_Timer,FALSE);    // 끊지 않는걸로 테스트 한다
		//$callaction(N_fnDisconnect_All_Timer);
	}
	else{
		//$callaction(N_fnDisconnect_All_Timer);
		$callaction(fnRealData_All_Stop); 					// 실시간이 들어와서 문제가 된다.
		//$setnstimer(TIMER_DISCONNECT_ALL,60,N_fnDisconnect_All_Timer,FALSE);    
	}
" />
