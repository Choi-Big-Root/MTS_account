<action id="N_BecomeActive" scope="common" 
value="
	$log(************** N_BecomeActive [$p_not_background_check][$g_is_vaccine_ing][$g_file_name][$g_is_background] ===============);

	$setvar_common(g_is_background = false);
	$stopnstimer(TIMER_DISCONNECT_ALL);

	//20231116 권한 불필요 함으로 제거 (XML상에서 제거)
	/* 
	if($g_isAndroid){
		$setvar(_permission_usagestaus = $checkPermission_UsageStats());
		$logvar(_permission_usagestaus);
		if(!$isequal_string($_permission_usagestaus,true)){
			$callaction(fnSetUsageStus_Alarm);
			return;
		}
	}
	*/
	//$log(실시간 재연결****** dxFeed 빠지면서);
	//$callaction(fnDxfeed_Real_Send);


	if($g_menuCode==2131
	|| $g_menuCode==2132
	|| $g_menuCode==5131
	|| $g_menuCode==5132
	|| $g_menuCode==7131
	|| $g_menuCode==7132
	|| $g_menuCode==8132
	|| $g_menuCode==8133
	){
		if($g_is_background_check){  				// 차트 화면등에서 쓰임 
			//$log(************** N_BecomeActive Return Chart Screen g_menuCode:[$g_menuCode]);
			$log(***************** 차트셋팅:N_BecomeActive);
			$setvar_common(g_is_background_check = );  	
			return;	
		}		
		//if($g_isAndroid){
		//	if($isconnect($g_SiseSocketName)
		//	&& $isconnect($g_SiseSocketName_DOMESTIC)
		//	&& $isconnect($g_RealSocketName_Order)
		//	){
		//		$log(***************** 차트셋팅:N_BecomeActive 리턴 );
		//		return;	
		//	}
		//}	
		
	}
	$setvar_common(g_is_background_check = );

	if($p_not_background_check){						// 안드로이드 백신때문에 
		$log(************** N_BecomeActive Return Android Vaccine p_not_background_check:[$p_not_background_check]);
		$setvar_common(p_not_background_check = FALSE); 
		return;		
	} 		
	if($isequal_string($g_menuCode,1920)){ 	// 로그인 화면일 경우
		$log(************** N_BecomeActive Return login.xml g_menuCode:[$g_menuCode]);
		$checkPushData(fn_push_receive); 			// 들어온 푸쉬가 있는지 확인 
		return;		
	} 	

	if($isequal_string($g_file_name,intro_after)){		//intro,intro_after 체크
		$log(************** N_BecomeActive Return intro_after.xml g_file_name:[$g_file_name]);
		return;		
	} 		
	if($strlen($g_file_name) > 0){						//intro,intro_after 체크
		$log(************** N_BecomeActive OpenFile intro.xml g_file_name:[$g_file_name]);
		$openfile(plist/root/intro.xml); 		
		return;		
	} 		

	//if($g_isAndroid){
	if(true){
		if($isconnect($g_SiseSocketName)
		&& $isconnect($g_SiseSocketName_DOMESTIC)
		&& $isconnect($g_RealSocketName_Order)
		){
			$log(************** N_BecomeActive Return Android Socket Connected);
			$logvar(g_menu_open_npki_flag);
			if($g_screen_all_menu_state_flag || $g_menu_open_npki_flag){ return; }

			$callaction(N_fnBecomeActive_GoScreen); 
			return;
		}
	}
	
	$setvar(vg_4100_background.hidden = true );
	$web_active(trading_webview);
	//$logvar(tmp_tradeweb);	
	
	$setvar_common(g_is_background = false);
	
	if($strlen($g_file_name) > 0){	//intro,intro_after 체크
		$log(************** N_BecomeActive Openfile intro.xml g_file_name:[$g_file_name]);
		$openfile(plist/root/intro.xml); 		
		return;		
	} 		

	//$log(포그라운드  :$g_menuCode,$g_is_fingerprint_background, g_menuCode, g_itemcode_d, g_itemcode_n);

	if($g_is_fingerprint_background){ 	// 지문인식 백그라운드일 경우에는 리턴시킨다. 
		$log(************** N_BecomeActive Return g_is_fingerprint_background:[$g_is_fingerprint_background]);
		$setvar_common(g_is_fingerprint_background = );		
		return;		
	} 	

	
	$callaction(fnConfig_Load_All); // 설정파일을 불러온다.  - 어플 실행 시 하고 있는떼 필요가 있는지 확인해야 함. 
	
	$log(세로 모드로 강제로 바꾼다. ***********);
	if($g_isAndroid) {		$rotateView(1);		}
	$lcdallopen($lcd_open); 	
	$popscreen(pop_host_msg,center);

	$setvar_common(g_reconnect_processing = true); 	// 사용하는데 없음.
	$security_delkeytoken();
	$setvar_common(g_n_becomeActive_process = true); // 사용하는데 없음.


	$setvar(tmp_now_check = $now(yyyyMMddHHmm));
	$logvar(g_login_expiry, tmp_now_check);
	if($g_login_expiry < $tmp_now_check){		
		$log(************** N_BecomeActive Openfile Intro.xml g_login_expiry:[$g_login_expiry], tmp_now_check:[$tmp_now_check]);	
		$callaction(fnConfig_SetValue,g_login_id,));		// 로그인 아이디 초기화 
		$closescreen(pop_host_msg);
		$callaction(fnPopover_AlertAction,N_Act_Move_Intro_Alert,로그인 만료기간이 지났습니다.,,확인);
		return;
	}
	
	$checkPushData(fn_push_receive); 			// 들어온 푸쉬가 있는지 확인 
	$logvar(N_g_disconnect_sise, N_g_disconnect_domestic, N_g_disconnect_real);
	$log(************** N 시세: $isconnect($g_SiseSocketName));
	$log(************** N 국내: $isconnect($g_SiseSocketName_DOMESTIC));
	$log(************** N 체결: $isconnect($g_RealSocketName_Order));

	if(!$isconnect($g_SiseSocketName)
		|| !$isconnect($g_SiseSocketName_DOMESTIC)
		|| !$isconnect($g_RealSocketName_Order)
	){ 	
		if($isconnect($g_SiseSocketName)){			$disconnect($g_SiseSocketName);		}
		if($isconnect($g_SiseSocketName_DOMESTIC)){	$disconnect($g_SiseSocketName_DOMESTIC);		}
		if($isconnect($g_RealSocketName_Order)){	$disconnect($g_RealSocketName_Order);		}

